FROM node:20-bullseye AS build

WORKDIR /app

ARG VITE_PLAYLIST_URL="http://localhost:8080/stream/big-buck-bunny.m3u8"
ARG VITE_WALLET_PRIVATE_KEY=""
ARG VITE_STREAM_SERVER_URL="http://localhost:8080"
ARG VITE_4MICA_RPC_URL="https://api.4mica.xyz/"
ARG VITE_DEFAULT_TOKEN_ADDRESS="0x41E94Eb019C0762f9Bfcf9Fb1E58725BfB0e7582"
ARG VITE_ETH_RPC_PROXY_URL="https://polygon-amoy-bor-rpc.publicnode.com"
ARG VITE_ENABLE_EXTERNAL_STREAMING="false"

ENV VITE_PLAYLIST_URL=${VITE_PLAYLIST_URL}
ENV VITE_WALLET_PRIVATE_KEY=${VITE_WALLET_PRIVATE_KEY}
ENV VITE_STREAM_SERVER_URL=${VITE_STREAM_SERVER_URL}
ENV VITE_4MICA_RPC_URL=${VITE_4MICA_RPC_URL}
ENV VITE_DEFAULT_TOKEN_ADDRESS=${VITE_DEFAULT_TOKEN_ADDRESS}
ENV VITE_ETH_RPC_PROXY_URL=${VITE_ETH_RPC_PROXY_URL}
ENV VITE_ENABLE_EXTERNAL_STREAMING=${VITE_ENABLE_EXTERNAL_STREAMING}

COPY package.json package-lock.json ./
COPY vendor ./vendor
RUN npm ci

COPY . .
RUN npm run build

FROM nginx:1.27-alpine AS runtime

RUN cat >/etc/nginx/conf.d/default.conf <<'EOF'
server {
  listen 80;
  server_name _;

  root /usr/share/nginx/html;
  index index.html;

  location / {
    try_files $uri $uri/ /index.html;
  }

  location /stream {
    proxy_pass http://server:3000;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_buffering off;
  }

  location /tab {
    proxy_pass http://server:3000;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }

  location /rpc {
    proxy_pass http://server:3000;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
}
EOF

COPY --from=build /app/dist /usr/share/nginx/html
